{
  "compilerOptions": {
    "target": "es2016",
    "jsx": "react-jsx",
    "module": "CommonJS",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "exclude": [
    "node_modules",
    "dist"
  ],
  "include": [
    "./src/*",
    "./test",
    "./*",
    "./config"
  ]
}